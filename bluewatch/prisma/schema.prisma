generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model animal_species {
  id               Int       @id @default(autoincrement())
  name             String    @db.VarChar(255)
  scientific_name  String    @db.VarChar(255)
  photo            String?
  descrip          String?
  size             Float?
  weight           Float?
  color            String?   @db.VarChar(50)
  latitude         Float?
  longitude        Float?
  date_observation DateTime? @default(dbgenerated("CURRENT_DATE")) @db.Date
}

model marine_waste {
  id               Int       @id @default(autoincrement())
  name             String    @db.VarChar(255)
  description      String?
  photo            String?
  poids            Float?
  volume           Float?
  date_observation DateTime? @default(dbgenerated("CURRENT_DATE")) @db.Date
}
